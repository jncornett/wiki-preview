{
  "manifest_version": 2,
  "name": "wikiPreview",
  "version": "1.0",

  "description": "Display Wikipedia extracts when hovering over links.",
  "icons": {
    "128": "images/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "css": [
        "css/ui-lightness/jquery-ui-1.10.4.custom.min.css",
        "css/tooltip.css"
      ],
      "js": [
        "js/jquery-min.js",
        "js/jquery-ui-1.10.4.custom.min.js",
        "js/inject-min.js" 
      ]
    }
  ],

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },

  "page_action": {
    "default_name": "wikiPreview",
    "default_icon": "images/icon.png"
  },

  "permissions": [
    "declarativeContent",
    "tabs"
  ]
}